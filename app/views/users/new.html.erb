<h1>Welcome to Saladly!</h1>

<%= form_for @user do |f| %>

  First Name: <%= f.text_field :first_name %>
  Last Name: <%= f.text_field :last_name %>
  Email: <%= f.text_field :email%>
  Password: <%= f.password_field :password %><br>
  Please confirm your pasword <%= f.password_field :password_confirmation %><br>

  <%= f.submit "Signup" %><br>

<% end %>